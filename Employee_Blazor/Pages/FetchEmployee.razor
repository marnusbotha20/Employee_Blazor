@page "/FetchEmployee"

@using Employee_Blazor.DataAccess
@using Employee_Blazor.Models
@inject EmployeeService EmployeeService

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from a service.</p>
<p>
    <a href="/addemployee">Create New</a>
</p>

@if (Employees == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Employee Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>DOB</th>
                <th>Phone Number</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Employees)
            {
                <tr>
                    <td>@employee.EmployeeId</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.DateOfBirth.ToShortDateString()</td>
                    <td>@employee.PhoneNumber</td>
                    <td>@employee.Email</td>
                    <td>
                        <a href='/editemployee/@employee.EmployeeId'>Edit</a>  |
                        <a href='/delete/@employee.EmployeeId'>Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    List<Employee> Employees;
    int EmployeeId;

    protected override async Task OnInitializedAsync()
    {
        Employees = await EmployeeService.GetEmployeesAsync();
    }


}
